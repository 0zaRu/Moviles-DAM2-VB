<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3D999"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="313dp"
        android:layout_height="347dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="92dp"
        android:background="#D8009688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/tNombre"
            android:layout_width="196dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:hint="@string/introduce_tu_nombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/tNacimiento"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="144dp"
            android:hint="@string/introduce_tu_fecha_de_nacimiento"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/tApellidos"
            android:layout_width="288dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:hint="@string/introduce_tus_apellidos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/tDireccion"
            android:layout_width="237dp"
            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="212dp"
            android:ems="10"
            android:hint="@string/introduce_tu_direcci_n"
            android:inputType="textPostalAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/tTelefono"
            android:layout_width="228dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="276dp"
            android:ems="10"
            android:hint="@string/introduce_tu_telefono"
            android:inputType="phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/bLimpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginBottom="192dp"
        android:backgroundTint="#1DE9B6"
        android:text="@string/limpiar"
        android:textColor="#3C3C3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginBottom="192dp"
        android:backgroundTint="#1DE9B6"
        android:text="@string/aceptar"
        android:textColor="#3C3C3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="199dp"
        android:layout_height="29dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="60dp"
        android:text="@string/introduce_tus_datos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tError"
        android:layout_width="312dp"
        android:layout_height="41dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        android:textColor="#CC0000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>
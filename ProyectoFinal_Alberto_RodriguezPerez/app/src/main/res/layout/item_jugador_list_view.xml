<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_redondeado_claro"
    android:padding="10dp">

    <ImageView
        android:id="@+id/itemimFotoPerfil"
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:background="@drawable/foto_redondeada"
        android:clipToOutline="true"
        android:foreground="@drawable/foto_redondeada"
        android:scaleType="centerCrop"
        android:src="@drawable/perfil_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@color/GrisBlanco"
        android:id="@+id/itemtvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#1234"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/itemtvNombre"
        app:layout_constraintTop_toBottomOf="@+id/itemtvNombre" />

    <TextView
        android:textColor="@color/GrisBlanco"
        android:id="@+id/itemtvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="8dp"
        android:text="Alberto"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/itemimFotoPerfil"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@color/GrisBlanco"
        android:id="@+id/itemtvPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Spain"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemtvId" />

    <TextView
        android:textColor="@color/GrisBlanco"
        android:id="@+id/itemtvElo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:text="ELO: 1650"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemtvPais" />

</androidx.constraintlayout.widget.ConstraintLayout>
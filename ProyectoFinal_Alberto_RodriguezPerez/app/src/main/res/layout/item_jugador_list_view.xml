<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/itemimFotoPerfil"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:background="@drawable/foto_redondeada"
        android:clipToOutline="true"
        android:foreground="@drawable/foto_redondeada"
        android:scaleType="centerCrop"
        android:src="@drawable/perfil_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemtvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#1234"
        app:layout_constraintStart_toStartOf="@+id/itemtvNombre"
        app:layout_constraintTop_toBottomOf="@+id/itemtvNombre" />

    <TextView
        android:id="@+id/itemtvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:text="Alberto"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/itemimFotoPerfil"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemtvPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:text="Spain"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemtvId" />

    <TextView
        android:id="@+id/itemtvElo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:text="ELO: 1650"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemtvPais" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DataActivity">

    <FrameLayout
        android:id="@+id/principalFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60sp"
        android:background="@color/GrisHueso"/>

    <LinearLayout
        android:background="@color/carne"
        android:id="@+id/optionBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/principalFrame">

        <Button
            android:text="Mi Info"
            android:id="@+id/fragmentBut1"
            android:layout_width="74dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10sp" />

        <Button
            android:text="yo"
            android:id="@+id/fragmentBut2"
            android:layout_marginHorizontal="10sp"
            android:layout_width="74dp"
            android:layout_height="match_parent"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
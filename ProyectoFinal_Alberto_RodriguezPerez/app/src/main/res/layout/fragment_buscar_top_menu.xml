<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Fragments.Inicio.InicioTopMenuFragment">

    <LinearLayout
        android:id="@+id/optionBar"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@color/carne"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BuscarButPerfil"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/GrisHueso"
            android:textColor="@color/carne"
            android:text="yo"/>

        <EditText
            android:id="@+id/BuscarEtBusqueda"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="28sp"
            android:backgroundTint="@color/GrisHueso"
            android:gravity="end" />

        <Button
            android:layout_gravity="end"
            android:id="@+id/BuscarButlupa"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/GrisHueso"
            android:textColor="@color/carne"
            android:layout_marginEnd="15dp"
            android:text="Q" />

    </LinearLayout>
</FrameLayout>
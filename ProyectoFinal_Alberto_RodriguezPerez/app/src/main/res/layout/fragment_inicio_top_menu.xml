<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Fragments.Inicio.InicioTopMenuFragment">

    <LinearLayout
        android:id="@+id/optionBar"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@color/carne"
        android:orientation="horizontal">

        <Button
            android:id="@+id/InicioButPerfil"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/GrisHueso"
            android:text="yo"
            android:textColor="@color/carne"
            android:textStyle="bold" />


        <Button
            android:id="@+id/InicioButTodo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/GrisHueso"
            android:text="Todo"
            android:textColor="@color/carne"
            android:textStyle="bold" />

        <Button
            android:id="@+id/InicioButPartidas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/GrisHueso"
            android:text="Partidas"
            android:textColor="@color/carne"
            android:textStyle="bold" />

        <Button
            android:id="@+id/InicioButTorneos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/GrisHueso"
            android:text="Torneos"
            android:textColor="@color/carne"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_redondeado_claro"
    android:layout_margin="10sp"
    android:padding="10dp">

    <TextView
        android:text="Prueba"
        android:textColor="@color/GrisBlanco"
        android:textSize="20dp"
        android:id="@+id/tvJugador1"
        android:layout_width="140dp"
        android:layout_height="30sp"
        android:layout_marginStart="25dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvJugador2"
        android:layout_width="140sp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Prueba"
        android:textColor="@color/GrisBlanco"
        android:textSize="20dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Prueba"
        android:textColor="@color/GrisBlanco"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJugador1" />

    <TextView
        android:id="@+id/tvTorneo"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Prueba"
        android:textColor="@color/GrisBlanco"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResultado" />


</androidx.constraintlayout.widget.ConstraintLayout>
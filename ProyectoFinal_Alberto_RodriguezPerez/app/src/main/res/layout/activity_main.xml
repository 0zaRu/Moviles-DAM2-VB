<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:background="@color/GrisBlanco">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/layout_redondeado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="40sp"
        android:layout_marginVertical="170sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:textColor="@color/GrisBlanco"
            android:id="@+id/txInfo"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/iniciar_sesi_n"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/tfNombreUser"
            android:backgroundTint="@color/GrisBlanco"
            android:textColor="@color/GrisBlanco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="60sp"
            android:autofillHints=""
            android:hint="@string/nombre_de_usuario"
            android:inputType="text"
            android:text="Alberto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txInfo" />

        <EditText

            android:text="123456"
            android:backgroundTint="@color/GrisBlanco"
            android:textColor="@color/GrisBlanco"
            android:layout_marginVertical="50sp"
            android:layout_marginHorizontal="20sp"
            android:id="@+id/tfpasswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/contrase_a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tfNombreUser"
            android:autofillHints=""
            android:inputType="textPassword" />

        <TextView
            android:textColor="@color/GrisBlanco"
            android:layout_marginTop="5sp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:text="@string/no_tienes_cuenta"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tfpasswd" />

        <TextView
            android:layout_marginStart="3sp"
            android:layout_marginTop="5sp"
            android:id="@+id/tvRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/azulHiperText"
            android:text="@string/reg_strate"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/tfpasswd" />


        <Button
            android:id="@+id/btnLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/GrisBlanco"
            android:text="@string/conectar"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>